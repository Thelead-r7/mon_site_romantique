  <!-- JavaScript -->
  <script>
    function afficherImmersion() {
      document.getElementById("bouton").style.display = "none";
      document.getElementById("musique1").play();

      const zone = document.getElementById("immersion");
      zone.style.display = "block";
      setTimeout(() => {
        zone.style.opacity = "1";
      }, 100);

      document.body.style.backgroundColor = "#fbd3e9";
    }

    function afficherCitations() {
      document.getElementById("musique1").pause();
      document.getElementById("musique2").play();

      const zone = document.getElementById("citations");
      zone.style.display = "block";
      setTimeout(() => {
        zone.style.opacity = "1";
      }, 100);

      document.body.style.backgroundColor = "#fff0f5";
    }

    // C≈ìurs qui tombent
    function creerCoeur() {
      const coeur = document.createElement("div");
      coeur.classList.add("heart");
      coeur.style.left = Math.random() * 100 + "vw";
      coeur.textContent = "‚ù§Ô∏è";
      document.body.appendChild(coeur);
      setTimeout(() => coeur.remove(), 5000);
    }

    setInterval(creerCoeur, 800);
  </script>

